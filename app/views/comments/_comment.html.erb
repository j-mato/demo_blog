<div class="box">
	<article class="media">
		<div clas="media-content">
			<div class="content">
				<p>
					<strong><%= comment.name %>:</strong>
					<%= comment.comment %>
				</p>
			</div>
		</div>

		<div class="level-right">
			<p class="level-item">
				<%= button_to "Delete", [comment.post, comment], form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: "button is-warning  is-small is-rounded" %>
			</p>
		</div>

	</article>

</div>
